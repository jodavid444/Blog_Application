<div class="user-page">
  <%= render "shared/details", user: @user %>
    <div class="user-bio">
     <strong class="bio">Bio: </strong> <br>
     <p><%= @user.bio %></p>
    </div>
    <div class="user-posts">
    <% @user.recent_posts.each do |post| %>
        <%= link_to user_post_path(@user) do%>
      <%= render "shared/post_details", post: post %>
        <%end%>
    <%end%>
    </div>
    <% if @current_user %>
    <a href="/users/<%= @user.id %>/posts/new">
    <button class="posts-btn">
        Add new post
      </button></a>
    <% end %>

<a href="/users/<%= @user.id %>/posts">
<button class="posts-btn">
        See all posts
</button></a>
</div>
